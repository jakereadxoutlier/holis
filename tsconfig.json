{
  "compilerOptions": {
    "strict": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "noEmit": true,
    "target": "es2017",
    "types": ["jest"],
    "lib": ["es2017"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["app/components/*"],
      "@screens/*": ["app/screens/*"],
      "@features/*": ["app/features/*"],
      "@hooks/*": ["hooks/*"],
      "@stores/*": ["stores/*"],
      "@services/*": ["services/*"],
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"]
    }
  }
}
